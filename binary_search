#include<stdio.h>
int n,i,item,flag=0,lb,ub,mid;
int main(){
    printf("enetr the size of the array:");
    scanf("%d",&n);
    int a[n];
    printf("enter the element into the array;");
    for(i=0;i<n;i++){
        scanf("%d",&a[i]);
    }
    printf("enetr the item you want to search:");
    scanf("%d",&item);
    lb=0;
    ub=n-1;
    while(lb<ub){
        mid=(lb+ub)/2;
        if(item==a[mid]){
            flag=1;
            break;
        }
        else{
            if(item>a[mid]){
                lb=mid+1;
            }
            else{
                ub=mid-1;
            }
        }
    }
    if(flag==0){
        printf("not found");
    }
    else{
        printf("found");
    }
    return 0;
}
